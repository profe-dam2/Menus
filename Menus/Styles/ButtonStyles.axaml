<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        
        <!--ESTILO BOTON 1-->
        <Style Selector="Button.MiBoton" >
                <Setter Property="Background" Value="LightBlue"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Width" Value="160"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="10"/>
        </Style>
        
        <Style Selector="Button.MiBoton:pointerover">
                <Setter Property="Background" Value="DarkRed"/>
                <Setter Property="Foreground" Value="Beige"/>
        </Style>
        
        <Style Selector="Button.MiBoton:pressed">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- ########################## -->
        <!-- ESTILO BOTON 2 -->
        <!-- ########################## -->
        <Style Selector="Button.MiBoton2">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="20"/>
                <Setter Property="RenderTransform">
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter>
        </Style>
        
        <Style Selector="Button.MiBoton2:pointerover">
                <Setter Property="RenderTransform">
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                </Setter>
        </Style>
        
        <!-- ########################## -->
        <!-- ESTILO BOTON 3 CON IMAGEN -->
        <!-- ########################## -->
        <Style Selector="HyperlinkButton.MiBotonImagen">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="Background">
                        <Setter.Value>
                                <ImageBrush Stretch="Fill" 
                                            Source="avares://Menus/Assets/mono.png"/>
                        </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter>
        </Style>
        <Style Selector="HyperlinkButton.MiBotonImagen:pointerover">
                
                <Setter Property="RenderTransform">
                        <TransformGroup>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                <RotateTransform Angle="5"/>
                        </TransformGroup>

                </Setter>
        </Style>
        
        
        
        
        
        
        
</Styles>
